	@Override
	public void addStudentDetails(StudentModel studentmodel) {
		String insertQuery ="insert into Student values (?,?,?,?,?,?,?,?,?,?)";
		Object[] Student= {studentmodel.getName(),studentmodel.getRegister_No(),studentmodel.getGender(),
				studentmodel.getAge(),studentmodel.getPhoneNumber(),studentmodel.getCurrent_status(),
				studentmodel.getEmail_Id(),studentmodel.getCourse(),studentmodel.getBatch(),
				studentmodel.getFees()};
		jdbctemplate.update(insertQuery, Student);
		
	}

